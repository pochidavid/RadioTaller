<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_indigo_400</item>
        <item name="colorPrimaryDark">@color/md_indigo_600</item>
        <item name="colorAccent">@color/md_pink_300</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoActionBar" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/md_green_400</item>
        <item name="colorPrimaryDark">@color/md_green_600</item>
        <item name="colorAccent">@color/md_orange_300</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/md_indigo_700</item>
        <item name="colorPrimaryDark">@color/md_indigo_900</item>
        <item name="colorAccent">@color/md_pink_600</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorPrimary">@color/md_green_700</item>
        <item name="colorPrimaryDark">@color/md_green_900</item>
        <item name="colorAccent">@color/md_orange_600</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    </resources>
